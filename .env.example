# ============================================
# FastAPI 应用配置文件
# ============================================

# 运行环境
# - development: 开发环境
# - production: 生产环境
APP_ENV=development

# 服务监听地址
# - 0.0.0.0: 允许外部访问（局域网或公网）
# - 127.0.0.1: 只允许本机访问
APP_HOST=0.0.0.0

# 服务端口号
# 默认: 8000，可以改成其他未被占用的端口
APP_PORT=8000

# 日志输出级别（控制控制台显示的日志详细程度）
# - debug: 显示所有调试信息（最详细）
# - info: 显示一般信息（默认，会显示启动、请求等信息）
# - warning: 只显示警告和错误（推荐，屏蔽INFO日志）
# - error: 只显示错误信息
# - critical: 只显示严重错误（最简洁）
LOG_LEVEL=info

# ============================================
# MySQL 数据库配置
# ============================================

# 数据库主机地址
DB_HOST=localhost

# 数据库端口
DB_PORT=3306

# 数据库名称
DB_NAME=mail_system

# 数据库用户名
DB_USER=root

# 数据库密码
DB_PASSWORD=your_password

# 连接池大小
DB_POOL_SIZE=10

# 连接超时时间（秒）
DB_CONNECT_TIMEOUT=10

# 数据库字符集
DB_CHARSET=utf8mb4